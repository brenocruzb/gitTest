<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.facts.details.FactDetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="?attr/colorPrimary"
        app:titleTextColor="@color/white"
        app:title="@string/fact_title">

    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/catImage"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/image"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/factTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fact_title"
        app:layout_constraintTop_toBottomOf="@id/catImage"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:id="@+id/factText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintTop_toBottomOf="@id/factTitle"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"/>


</androidx.constraintlayout.widget.ConstraintLayout>